
@{
    ViewBag.Title = "Add";
}

<script src="~/AppJs/UserMaster.js"></script>
<script src="~/Content/toastr/toastr.js"></script>
<link href="~/Content/toastr/toastr.css" rel="stylesheet" />

<div class="container-fluid" style="margin-top:20px">
    <div class="row">
        <div class="col-md-6">
            <h4>Add New User</h4>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Search User" />
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#userInputModel" id="btnNew"><i class="glyphicon glyphicon-plus-sign"></i> Add New</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table" id="tblUsers">
            <thead>
                <tr>
                    <th>UserID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Mobile</th>
                    <th>Email</th>
                    <th>Active</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="userInputModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="form">
        <div class="modal-content">
            <div class="modal-header" style="background-color:black">
                <h4 class="modal-title" id="exampleModalLabel" style="color:white;font-display:swap">
                    Add New User
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="label label-info" for="txtFirstName">First Name</label>
                            <input type="text" id="txtFirstName" class="form-control" placeholder="First Name" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="label label-info" for="txtLastName">Last Name</label>
                            <input type="text" id="txtLastName" class="form-control" placeholder="Last Name" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="label label-info" for="ddlGender">Gender</label>
                            <select class="form-control" id="ddlGender">
                                <option value="0">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="label label-info" for="dtDateofbirth">Date of birth</label>
                            <input type="date" id="dtDateofbirth" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="label label-info" for="txtEmail">Email</label>
                            <input type="email" id="txtEmail" class="form-control" placeholder="Email" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="label label-info" for="txtMobile">Mobile</label>
                            <input type="tel" id="txtMobile" class="form-control" placeholder="Mobile" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="label label-info" for="txtPassword">Password</label>
                            <input type="password" id="txtPassword" class="form-control" placeholder="Password" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="label label-info" for="chkIsActive">Is Active?</label>
                            <input type="checkbox" id="chkIsActive" class="form-control" disabled />
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnAddUser" onclick="AddUser();">Save changes</button>
            </div>
        </div>
    </div>
</div>